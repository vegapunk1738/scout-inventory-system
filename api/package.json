{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "bunx drizzle-kit generate",
    "migrate:dev": "wrangler d1 migrations apply scout-stock-db-dev --remote",
    "migrate:prod": "wrangler d1 migrations apply scout-stock-db --remote --env prod",
    "deploy:dev": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env prod",
    "release:dev": "bun run db:generate && bun run migrate:dev && bun run deploy:dev",
    "release:prod": "bun run db:generate && bun run migrate:prod && bun run deploy:prod"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "wrangler": "^4.63.0"
  }
}